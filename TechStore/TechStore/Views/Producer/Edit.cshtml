@using Microsoft.AspNetCore.Identity
@model TechStore.ViewModels.EditProducerView
@{
    ViewBag.Title = "Edit producer";
}
<div class="row justify-content-center">
    <div class="col col-lg-7 my-2">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col text-center">
                        <h2 class="">Edit Producer</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Producer">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col">
                            <input type="hidden" asp-for="Id" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input type="text" asp-for="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label asp-for="Phone" class="control-label">Phone</label>
                            <input type="text" asp-for="Phone" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input type="text" asp-for="Email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label asp-for="WebSite" class="control-label">WebSite</label>
                            <input type="text" asp-for="WebSite" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col text-center">
                            <button type="submit" value="Save" class="btn btn-dark">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>