@model IEnumerable<TechStore.DAL.Models.Producer>
@{
    ViewBag.Title = "Find result";
}


<div class="input-group row mt-2">
    <div class=" col">
        <h2 class="">Founded @Model.Count() records : </h2>
    </div>
    <div class="col ml-auto">
        <form asp-controller="Producer" asp-action="Index" method="get">
            <button type="submit" class="btn btn-sm btn-primary">Back to Goods</button>
        </form>
    </div>
</div>

<table class="table table-responsive-md table-hover">
    <thead class="thead-dark">
        <tr>
            <th>First Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>WebSite</th>
            <th>Products</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producer in Model)
        {
            <tr>
                <td>@producer.Name</td>
                <td>@producer.Phone</td>
                <td>@producer.Email</td>
                <td>@producer.WebSite</td>
                <td><a asp-action="ShowGoods" asp-route-id="@producer.Id">Show Products</a></td>
                <td>
                    <form asp-action="Edit" asp-route-id="@producer.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-primary">
                            Edit
                        </button>
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@producer.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
