@model IEnumerable<TechStore.DAL.Models.Producer>
@{
    ViewBag.Title = "Producer list";
}

<div class="row py-3">
    <div class="col">
        <a class="btn btn-sm btn-primary" asp-action="Create">Add new producer</a>
        <a class="btn btn-sm btn-primary" asp-action="Find">Find producer</a>
    </div>
</div>


<table class="table table-responsive-md table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>WebSite</th>
            <th>Products</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producer in Model)
        {
            <tr>
                <td>@producer.Name</td>
                <td>@producer.Phone</td>
                <td>@producer.Email</td>
                <td>@producer.WebSite</td>
                <td><a asp-action="ShowGoods" asp-route-id="@producer.Id">Show Products</a></td>
                <td>
                    <form asp-action="Edit" asp-route-id="@producer.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-primary">
                            Edit
                        </button>
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@producer.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>