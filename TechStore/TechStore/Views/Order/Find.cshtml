@model TechStore.ViewModels.FindOrderView
@{
    ViewBag.Title = "Find Order";
}

<form asp-action="Find" asp-controller="Order">
    <div class="row py-2 justify-content-center">
    <div class="form-group col-lg-7">
    <div class="form-group row">
        <div class="col">
            <label asp-for="Id" class="control-label">Id</label>
            <input type="number" asp-for="Id" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="OrderDate" class="control-label">Date of order</label>
            <input type="date" asp-for="OrderDate" class="form-control" />
        </div>
    </div>
        <div class="form-group row">
            <div class="col">
                @foreach (var status in Model.OrderStatuses)
                {
                    <input type="checkbox" name="statuses" value="@status"
                           @(Model.SelectedStatuses.Contains(status) ? "checked=\"checked\"" : "") />@status.ToString() <br />
                }
            </div>
        </div>
            <div class="form-group row">
                <div class="col">
                    <button type="submit" value="Find" class="btn btn-primary">Find</button>
                </div>
            </div>
        </div>
    </div>
</form>
