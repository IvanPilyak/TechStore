@model TechStore.DAL.Models.Customer
@{
    ViewBag.Title = "Order's customer";
}

<div class="input-group row mt-2">
    <div class=" col">
        <h2 class="">Goods on @ViewBag.OrderId storage : </h2>
    </div>
    <div class="col">
        <span class="input-group-btn">
            <a class="btn btn-sm btn-primary" asp-controller="Order" asp-action="Index" style="float: right;">Back</a>
        </span>
    </div>
</div>

<table class="table table-responsive-md table-hover">
    <thead class="thead-dark">
        <tr>
            <th>First Name</th>
            <th>Second Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Orders</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.FirstName</td>
            <td>@Model.SecondName</td>
            <td>@Model.Phone</td>
            <td>@Model.Email</td>
            <td><a asp-action="ShowOrders" asp-controller="Customer" asp-route-id="@Model.Id">Orders</a></td>
            <td>
                <form asp-action="Edit"  asp-controller="Customer" asp-route-id="@Model.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-primary">
                        Edit
                    </button>
                </form>
            </td>
            <td>
                <form asp-action="Delete" asp-controller="Customer" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    </tbody>
</table>
