@model IEnumerable<TechStore.DAL.Models.Order>
@{
    ViewBag.Title = "Order list";
}

<div class="row py-3">
    <div class="col">
        <a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Find">Find order</a>
    </div>
</div>


<table class="table table-responsive-md table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Date of order</th>
            <th>Goods</th>
            <th>Customer</th>
            <th>City</th>
            <th>Street</th>
            <th>Status</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate</td>
            <td><a asp-action="ShowCustomer" asp-route-id="@order.Id">Customer</a></td>
            <td><a asp-action="ShowGoods" asp-route-id="@order.Id">Goods</a></td>
            <td>@order.EndPointCity</td>
            <td>@order.EndPointStreet</td>
            <td>@order.OrderStatus</td>
            <td>@order.CommonPrice</td>
        </tr>
    }
    </tbody>

</table>

