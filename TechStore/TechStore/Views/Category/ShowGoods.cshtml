@model IEnumerable<TechStore.DAL.Models.Good>
@{
    ViewBag.Title = "Product list";
}

<div class="input-group row mt-2">
    <div class=" col">
        <h2 class="">Goods on @ViewBag.CategoryName storage : </h2>
    </div>
    <div class="col">
        <span class="input-group-btn">
            <a class="btn btn-sm btn-primary" asp-controller="Category" asp-action="Index" style="float: right;">Back</a>
        </span>
    </div>
</div>

<table class="table table-responsive-md table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Year of goods production</th>
            <th>The warranty period</th>
            <th>Producer name</th>
            <th>Price</th>
            <th>Type</th>
            <th>Amount</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var good in Model)
        {
            <tr>
                <td>@good.Name</td>
                <td>@good.YearOfManufacture</td>
                <td>@good.WarrantyTerm months</td>
                <td>@good.Producer.Name</td>
                <td>@good.Price</td>
                @*<td>@good.Type</td>*@
                <td>@good.Category.Name</td>
                <td>@good.Count</td>
                <td>
                    <form asp-action="Edit" asp-route-id="@good.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-primary">
                            Edit
                        </button>
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@good.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
