@model IEnumerable<TechStore.DAL.Models.Category>
@{
    ViewBag.Title = "Category list";
}

<div class="row py-3">
    <div class="col">
        <a class="btn btn-sm btn-primary" asp-action="Create">Add new category</a>
        <a class="btn btn-sm btn-primary" asp-action="Find">Find category</a>
    </div>
</div>


<table class="table table-responsive-md table-hover">
    <thead class="thead-dark">
    <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Products</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Title</td>

            <td><a asp-action="ShowGoods" asp-route-id="@category.Id">Show Products</a></td>
            <td>
                <form asp-action="Edit" asp-route-id="@category.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-primary">
                        Edit
                    </button>
                </form>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@category.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
