@using Microsoft.AspNetCore.Identity
@model TechStore.ViewModels.EditCategoryView
@{
    ViewBag.Title = "Edit producer";
}

<form asp-action="Edit" asp-controller="Category">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col">
            <input type="hidden" asp-for="Id" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="Name" class="control-label">Name</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Name" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="Title" class="control-label">Title</label>
            <input type="text" asp-for="Title" class="form-control" placeholder="Title" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="ImageURL" class="control-label">ImageUrl</label>
            <input type="text" asp-for="ImageURL" class="form-control" placeholder="ImageUrl" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" value="Save" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>