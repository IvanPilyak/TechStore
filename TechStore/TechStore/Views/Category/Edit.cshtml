@using Microsoft.AspNetCore.Identity
@model TechStore.ViewModels.EditCategoryView
@{
    ViewBag.Title = "Edit category";
}

<div class="row justify-content-center">
    <div class="col col-lg-7 my-2">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col text-center">
                        <h2 class="">Edit Category</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Category">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col">
                            <input type="hidden" asp-for="Id" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Name" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label asp-for="Title" class="control-label">Title</label>
                            <input type="text" asp-for="Title" class="form-control" placeholder="Title" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label asp-for="ImageURL" class="control-label">ImageUrl</label>
                            <input type="text" asp-for="ImageURL" class="form-control" placeholder="ImageUrl" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col text-center">
                            <button type="submit" value="Save" class="btn btn-dark">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>