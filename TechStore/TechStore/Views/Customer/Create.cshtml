@model TechStore.ViewModels.CreateCustomerView
@{
    ViewBag.Title = "New customer";
}
<div class="row justify-content-center">
    <div class="col col-lg-7 my-2">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col text-center">
                        <h2 class="">Create User</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="Customer">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row py-2 justify-content-center">
                        <div class="form-group col">
                            <div class="form-group row">
                                <div class="col">
                                    <span asp-validation-for="FirstName"></span>
                                    <label>First Name</label>
                                    <input asp-for="FirstName" class="form-control"  placeholder="First Name">
                                </div>
                                <div class="col">
                                    <span asp-validation-for="SecondName"></span>
                                    <label>Last Name</label>
                                    <input asp-for="SecondName" class="form-control" placeholder="Last Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <span asp-validation-for="Phone"></span>
                                    <label>Phone</label>
                                    <input asp-for="Phone" class="form-control" placeholder="Phone" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <span asp-validation-for="Email"></span>
                                    <label>Email</label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <span asp-validation-for="Password"></span>
                                    <label>Password</label>
                                    <input asp-for="Password" class="form-control" placeholder="Password">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col text-center">
                                    <button type="submit" class="btn btn-dark" value="Add">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>