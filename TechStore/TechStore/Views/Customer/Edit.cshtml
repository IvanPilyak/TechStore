@using Microsoft.AspNetCore.Identity
@model TechStore.ViewModels.EditCustomerView
@{
    ViewBag.Title = "Edit customer";
}

<form asp-action="Edit" asp-controller="Customer">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <div class="form-group row">
            <div class="col">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <span asp-validation-for="FirstName"></span>
                <input asp-for="FirstName" class="form-control" placeholder="First Name">
            </div>
            <div class="col">
                <span asp-validation-for="SecondName"></span>
                <input asp-for="SecondName" class="form-control" placeholder="Last Name">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <span asp-validation-for="Phone"></span>
                <input asp-for="Phone" class="form-control" placeholder="Phone" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <span asp-validation-for="Email"></span>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
            </div>
        </div>
    </div>
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" value="Save" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>