@using Microsoft.AspNetCore.Identity
@model TechStore.ViewModels.EditCustomerView
@{
    ViewBag.Title = "Edit customer";
}
<div class="row justify-content-center">
    <div class="col col-lg-7 my-2">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col text-center">
                        <h2 class="">Create User</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Customer">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <div class="form-group row">
                            <div class="col">
                                <div class="form-group">
                                    <input type="hidden" asp-for="Id" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <span asp-validation-for="FirstName"></span>
                                <label>First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="First Name">
                            </div>
                            <div class="col">
                                <span asp-validation-for="SecondName"></span>
                                <label>Last Name</label>
                                <input asp-for="SecondName" class="form-control" placeholder="Last Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <span asp-validation-for="Phone"></span>
                                <label>Phone</label>
                                <input asp-for="Phone" class="form-control" placeholder="Phone" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col">
                                <span asp-validation-for="Email"></span>
                                <label>Email</label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @foreach (IdentityRole role in Model.AllRoles)
                        {
                            <input type="checkbox" name="roles" value="@role.Name"
                                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") /> @role.Name <br />
                            }
                    </div>
                    <div class="form-group row">
                        <div class="col text-center">
                            <button type="submit" value="Save" class="btn btn-dark">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>