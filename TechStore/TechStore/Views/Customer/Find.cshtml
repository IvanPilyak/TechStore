@model TechStore.ViewModels.FindCustomerView
@{
    ViewBag.Title = "Find customer";
}

<form asp-action="Find" asp-controller="Customer">
    <div class="form-group">
        <div class="form-group row">
            <div class="col">
                <span asp-validation-for="FirstName"></span>
                <input asp-for="FirstName" class="form-control" placeholder="First Name">
            </div>
            <div class="col">
                <span asp-validation-for="SecondName"></span>
                <input asp-for="SecondName" class="form-control" placeholder="Last Name">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <span asp-validation-for="Phone"></span>
                <input asp-for="Phone" class="form-control" placeholder="Phone" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <span asp-validation-for="Email"></span>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button type="submit" value="Find" class="btn btn-primary">Find</button>
            </div>
        </div>
    </div>
</form>