@model TechStore.ViewModels.CreateStorageView
@{
    ViewBag.Title = "New Storage";
}
<div class="row justify-content-center">
    <div class="col col-lg-7 my-2">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col text-center">
                        <h2 class="">Create Storage</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="Storage">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row py-2 justify-content-center">
                        <div class="form-group col">
                            <div class="form-group row">
                                <div class="col">
                                    <label asp-for="City" class="control-label">City</label>
                                    <input type="text" asp-for="City" class="form-control" placeholder="City" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <label asp-for="Street" class="control-label">Street</label>
                                    <input type="text" asp-for="Street" class="form-control" placeholder="Street" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col text-center">
                                    <button type="submit" value="Add" class="btn btn-dark">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>