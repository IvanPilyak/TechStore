@model TechStore.ViewModels.CreateStorageView
@{
    ViewBag.Title = "New Storage";
}

<form asp-action="Create" asp-controller="Storage">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row py-2 justify-content-center">
    <div class="form-group col-lg-7">
        <div class="form-group row">
            <div class="col">
                <label asp-for="City" class="control-label">City</label>
                <input type="text" asp-for="City" class="form-control" placeholder="City"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label asp-for="Street" class="control-label">Street</label>
                <input type="text" asp-for="Street" class="form-control" placeholder="Street"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <button type="submit" value="Add" class="btn btn-success" >Add</button>
            </div>
        </div>
    </div>
    </div>
</form>