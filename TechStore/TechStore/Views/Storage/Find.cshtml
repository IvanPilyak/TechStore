@model Store.ViewModels.FindStorageView
@{
    ViewBag.Title = "Find storage";
}

<form asp-action="Find" asp-controller="Storage">
    <div class="row py-2 justify-content-center">
        <div class="form-group col-lg-7">
            <div class="form-group row">
                <div class="col">
                    <label asp-for="City" class="control-label">City</label>
                    <input type="text" asp-for="City" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Street" class="control-label">Street</label>
                    <input type="text" asp-for="Street" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <button type="submit" value="Find" class="btn btn-primary">Find</button>
                </div>
            </div>
        </div>
    </div>
</form>