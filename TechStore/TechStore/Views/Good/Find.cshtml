@model TechStore.ViewModels.FindGoodView
@{
    ViewBag.Title = "Find Good";
}
<div class="row justify-content-center">
    <div class="col col-lg-7 my-2">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col text-center">
                        <h2 class="">Find Product</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Find" asp-controller="Good">
                    <div class="row py-2 justify-content-center">
                        <div class="form-group col">
                            <div class="form-group row">
                                <div class="col">
                                    <label asp-for="Name" class="control-label">Name</label>
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Name" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <label asp-for="Producer.Name" class="control-label">Producer name</label>
                                    <input type="text" asp-for="Producer.Name" placeholder="Producer name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <label asp-for="YearOfManufacture" class="control-label">Year of manufacture</label>
                                    <input type="number" asp-for="YearOfManufacture" placeholder="Year of manufacture" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <label asp-for="StartPrice" class="control-label">Price</label>
                                    <input type="number" asp-for="StartPrice" placeholder="From" class="form-control" />
                                    <input type="number" asp-for="EndPrice" placeholder="To" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <label asp-for="Category" class="control-label">Type</label>
                                    <input type="text" asp-for="Category" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col text-center">
                                    <button type="submit" value="Find" class="btn btn-dark">Find</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

