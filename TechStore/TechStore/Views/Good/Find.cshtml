@model TechStore.ViewModels.FindGoodView
@{
    ViewBag.Title = "Find Good";
}

<form asp-action="Find" asp-controller="Good">
    <div class="row py-2 justify-content-center">
        <div class="form-group col-lg-7">
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Name" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="ProducerName" class="control-label">Producer name</label>
                    <input type="text" asp-for="ProducerName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="YearOfManufacture" class="control-label">Year of manufacture</label>
                    <input type="number" asp-for="YearOfManufacture" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="StartPrice" class="control-label">Price</label>
                    <input type="number" asp-for="StartPrice" placeholder="From" class="form-control" />
                    <input type="number" asp-for="EndPrice" placeholder="To" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Type" class="control-label">Type</label>
                    <input type="text" asp-for="Type" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <button type="submit" value="Find" class="btn btn-primary">Find</button>
                </div>
            </div>
        </div>
    </div>
</form>

