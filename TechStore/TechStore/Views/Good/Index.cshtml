@model IEnumerable<TechStore.DAL.Models.Good>
@{
    ViewBag.Title = "Goods list";
}
<div class="row py-3">
    <div class="col">
        <a class="btn btn-sm btn-dark" asp-action="Create">Add new good</a>
        <a class="btn btn-sm btn-dark" asp-action="Find">Find good</a>
    </div>
</div>
@foreach (var good in Model)
{
    <div class="card my-2">
        <div class="row card-body">
            <div class="col-md-3 col-3 text-center">

                <div class="cart-good-img mx-auto align-items-center"><img class="d-block mx-auto my-auto block-product-img" src="~/images/goods/@good.PhotoUrl" /></div>

            </div>
            <div class="col col-md-4">
                <p><b>Name : </b>@good.Name</p>
                <p><b>Price : </b>@good.Price</p>
                <p><b>Producer : </b>@good.Producer.Name</p>
                <p><b>Year production : </b>@good.YearOfManufacture</p>
            </div>
            <div class="col col-md-3">
                <p><b>Type : </b>@good.Category.Name</p>
                <p><b>Amount : </b>@good.Count</p>
                <p><b>Warranty period : </b>@good.WarrantyTerm months</p>
            </div>
            <div class="col col-md-1">
                <form asp-action="Edit" asp-controller="Good" asp-route-id="@good.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-dark">
                        Edit
                    </button>
                </form>
            </div>
            <div class="col col-md-1">
                <form asp-action="Delete" asp-controller="Good" asp-route-id="@good.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
}
